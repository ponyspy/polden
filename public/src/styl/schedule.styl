.outer_block
	padding-top 165px
	width 140%
	transform skewY(14deg) rotate(-8deg) translate(-370px, 65px)

.main_block
	transform skewY(-14deg) rotate(8deg) translate(370px, -65px)

.menu_block
	a:nth-child(3)
		color black

.content_block
	width 650px
	margin-left 310px

.schedule_date_title
	font 22pt/24pt 'DinProBold'
	color #ff144b
	margin-bottom 10px

.schedule_date_s_title
	font 12pt/14pt 'DinProBold'
	margin-bottom 10px

.schedule_events
	overflow hidden
	margin-left 45px

.event_item
	overflow hidden
	margin-bottom 10px

.event_header
	overflow hidden
	border-bottom 1px solid #ff144b

.event_time
	font 16pt/18pt 'DinProBold'
	color #ff144b
	float left

.event_hall
	float left
	font 12pt/14pt 'DinProBold'
	margin-left 10px
	position relative
	height 24px
	width 350px
	.inner
		position absolute
		left 0
		bottom 0

.event_title
	font 16pt/18pt 'DinProBold'
	float left

.event_age
	float left
	margin-left 10px
